{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "plugin",
	"projectType": "library",
	"sourceRoot": "libs/plugin/src",
	"tags": [],
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"options": {
				"assets": [
					"libs/plugin/*.md",
					{
						"glob": "**/!(*.ts)",
						"input": "./libs/plugin/src",
						"output": "./src"
					},
					{
						"glob": "**/*.d.ts",
						"input": "./libs/plugin/src",
						"output": "./src"
					},
					{
						"glob": "generators.json",
						"input": "./libs/plugin",
						"output": "."
					},
					{
						"glob": "executors.json",
						"input": "./libs/plugin",
						"output": "."
					}
				],
				"main": "libs/plugin/src/index.ts",
				"outputPath": "dist/libs/plugin",
				"tsConfig": "libs/plugin/tsconfig.lib.json",
				"updateBuildableProjectDepsInPackageJson": true
			},
			"outputs": ["{options.outputPath}"]
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"options": {
				"lintFilePatterns": ["libs/plugin/**/*.{ts,js,html,md,json,yml}"]
			},
			"outputs": ["{options.outputFile}"]
		},
		"test": {
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			},
			"executor": "@nx/jest:jest",
			"options": {
				"jestConfig": "libs/plugin/jest.config.ts",
				"passWithNoTests": true
			},
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
		}
	}
}
