		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"outDir": "../../dist/out-tsc",
		"target": "es2015",
		"types": ["node"]
	},
	"exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
	"extends": "./tsconfig.json",
	"include": ["src/**/*.ts"]
}
